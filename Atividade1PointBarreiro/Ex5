//5: Peso ideal
let altura = Number(prompt("Digite a altura (em metros):"));
let genero = prompt("Digite o gênero (M/F):").toUpperCase();
let pesoIdeal;
if (genero === "M") {
 pesoIdeal = (72.7 * altura) - 58;
 console.log("Peso ideal:", pesoIdeal.toFixed(2), "kg");
} else if (genero === "F") {
 pesoIdeal = (62.1 * altura) - 44.7;
 console.log("Peso ideal:", pesoIdeal.toFixed(2), "kg");
} else {
 console.log("Gênero inválido!");
}