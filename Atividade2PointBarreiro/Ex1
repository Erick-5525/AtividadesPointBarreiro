//1: Ler 10 números e mostrar o menor e o maior
let menor;
let maior;

for (let i = 1; i <= 10; i++) {
    let num = Number(prompt(`Digite o ${i}º número:`));

    if (i === 1) {
        menor = num;
        maior = num;
    } else {
        if (num < menor) menor = num;
        if (num > maior) maior = num;
    }
}

console.log("Menor valor:", menor);
console.log("Maior valor:", maior);
